<Window x:Class="JSON_P_JoshuaHooper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_P_JoshuaHooper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboColors" HorizontalAlignment="Left" Margin="166,42,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboColors_SelectionChanged"/>
        <Label Content="Choose a color:" HorizontalAlignment="Left" Margin="49,38,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBoxData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,0,0,0"/>

    </Grid>
</Window>
